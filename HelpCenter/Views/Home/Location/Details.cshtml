@model HelpCenter.Models.ViewModels.LocationViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>@Model.Location.Name</h2>


<table id="units" class="table table-bordered table-hover table-responsive">
    <thead>
        <tr>
            <th>Unit Number</th>
            <th>Tenant Name</th>
            <th>Tenant Phone Number</th>
            <th>Open Work Orders</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var unit in Model.Units)
        {
            <tr>@Html.ActionLink(unit.Unit.Number, "UnitDetails", "Location", new { UnitViewModel = unit }, new { @class = "btn btn-default" })
</tr>
            <tr>@unit.LeaseHolder.NameFirstLast</tr>
            <tr>@unit.LeaseHolder.PhoneNumber</tr>
            <tr>@unit.OpenWorkOrderCount</tr>
        }
    </tbody>
</table>


@section scripts
    {
    <script>
                $(document).ready(function () {
                    $("#units").DataTable();
                })
    </script>
}
